<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
    xmlns:vm="clr-namespace:NTNL.ViewModels"
    xmlns:v="clr-namespace:NTNL.Views"
	x:Class="NTNL.ColumnList"
	d:DesignWidth="150" d:DesignHeight="500">

    <StackPanel>
        <ListBox x:Name="listBox" Background="#00000000" Margin="0,0,0.4,0" Height="416" ItemsSource="{ Binding columnList, Mode=TwoWay}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Title}" Height="45" Width="140" Background="#00000000" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ToolTip="{Binding Title}" Command="{Binding FocusCommand, Mode=OneWay}" CommandParameter="{Binding index}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>
        <Button Content="+add column" FontSize="20" Background="#0012103D" ToolTip="Add Column" Margin="0,0,0.4,0" RenderTransformOrigin="0.485,0.509" Height="69" Command="{Binding addColumnCommand, Mode=OneWay}"/>
    </StackPanel>
</UserControl>
